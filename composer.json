{
    "name": "joomla/view",
    "type": "joomla-package",
    "description": "Joomla View Package",
    "keywords": ["joomla", "framework", "view"],
    "homepage": "https://github.com/joomla-framework/view",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.3.10",
        "joomla/model": "~1.0|2.0.*@dev",
        "joomla/renderer": "2.x@dev"
    },
    "require-dev": {
        "joomla/test": "1.*@stable",
        "phpunit/phpunit": "4.*@stable",
        "squizlabs/php_codesniffer": "1.*@stable"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\View\\": "src/",
            "Joomla\\View\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
	        "dev-2.0-dev": "2.0-dev"
        }
    },
    "minimum-stability": "dev"
}
