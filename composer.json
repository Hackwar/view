{
    "name": "joomla/view",
    "type": "joomla-package",
    "description": "Joomla View Package",
    "keywords": ["joomla", "framework", "view"],
    "homepage": "https://github.com/joomla-framework/view",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.3.10",
        "joomla/model": "2.0.*@dev"
    },
    "require-dev": {
        "joomla/filesystem": "~1.0",
        "joomla/test": "~1.0",
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "suggest": {
        "joomla/filesystem": "To use the AbstractHtmlView, install joomla/filesystem"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\View\\": "src/",
            "Joomla\\View\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
	        "dev-2.0-dev": "2.0-dev"
        }
    }
}
